@page "~/Player/{id}"
@using Intersect.Enums
@using Intersect.Extensions
@using Intersect.Server.Entities
@model PlayerProfileModel
@{
    ViewData["Title"] = Model.ViewedPlayer?.Name ?? "Player Not Found";
}

@section Head {
    <style>
        .player-profile {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem;
            font-family: 'Courier New', monospace;
        }

        .profile-header {
            background: linear-gradient(135deg, rgba(0, 0, 0, 0.8) 0%, rgba(26, 26, 46, 0.8) 100%);
            border: 4px solid #8b4513;
            border-radius: 12px;
            padding: 2rem;
            margin-bottom: 2rem;
            box-shadow: 
                inset 0 0 25px rgba(0, 0, 0, 0.6),
                0 8px 20px rgba(0, 0, 0, 0.7),
                0 0 0 3px rgba(139, 69, 19, 0.4),
                0 0 40px rgba(139, 69, 19, 0.3);
            display: flex;
            gap: 2rem;
            align-items: center;
        }

        .profile-avatar {
            flex-shrink: 0;
        }

        .profile-avatar img {
            width: 200px;
            height: 200px;
            border: 4px solid #8b4513;
            border-radius: 10px;
            box-shadow: 
                0 6px 16px rgba(0, 0, 0, 0.6),
                0 0 30px rgba(139, 69, 19, 0.3);
            background: rgba(0, 0, 0, 0.5);
            image-rendering: pixelated;
        }

        .profile-info {
            flex: 1;
        }

        .profile-name {
            font-size: 2.5rem;
            color: #ffd700;
            text-shadow: 
                3px 3px 0px #000,
                0 0 10px rgba(255, 215, 0, 0.8);
            margin: 0 0 0.5rem 0;
            font-family: 'Courier New', monospace;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        .profile-details {
            color: #d4af37;
            font-size: 1.1rem;
            line-height: 1.8;
        }

        .profile-details strong {
            color: #ffd700;
        }

        .profile-sections {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 2rem;
            margin-bottom: 2rem;
        }

        .profile-section {
            background: linear-gradient(135deg, rgba(0, 0, 0, 0.8) 0%, rgba(26, 26, 46, 0.8) 100%);
            border: 3px solid #8b4513;
            border-radius: 10px;
            padding: 1.5rem;
            box-shadow: 
                inset 0 0 20px rgba(0, 0, 0, 0.5),
                0 6px 16px rgba(0, 0, 0, 0.6),
                0 0 0 2px rgba(139, 69, 19, 0.3),
                0 0 30px rgba(139, 69, 19, 0.2);
        }

        .profile-section h2 {
            color: #ffd700;
            font-size: 1.8rem;
            margin: 0 0 1rem 0;
            text-shadow: 2px 2px 0px #000;
            border-bottom: 2px solid #8b4513;
            padding-bottom: 0.5rem;
            font-family: 'Courier New', monospace;
            text-transform: uppercase;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 1rem;
        }

        .stat-item {
            background: rgba(139, 69, 19, 0.2);
            border: 2px solid #8b4513;
            border-radius: 6px;
            padding: 0.75rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .stat-label {
            color: #d4af37;
            font-weight: bold;
        }

        .stat-value {
            color: #ffd700;
            font-size: 1.2rem;
            font-weight: bold;
        }

        .equipment-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 1rem;
        }

        .equipment-item {
            background: rgba(139, 69, 19, 0.2);
            border: 2px solid #8b4513;
            border-radius: 6px;
            padding: 1rem;
        }

        .equipment-slot {
            color: #d4af37;
            font-size: 0.9rem;
            margin-bottom: 0.5rem;
            text-transform: uppercase;
        }

        .equipment-name {
            color: #ffd700;
            font-weight: bold;
            font-size: 1.1rem;
        }

        .equipment-empty {
            color: #888;
            font-style: italic;
        }

        .not-found {
            text-align: center;
            color: #d4af37;
            font-size: 1.5rem;
            padding: 2rem;
        }
    </style>
}

<article class="player-profile">
    @if (Model.ViewedPlayer == null)
    {
        <div class="not-found">
            <h2>Player Not Found</h2>
            <p>The player you're looking for doesn't exist or has been removed.</p>
        </div>
    }
    else
    {
        var player = Model.ViewedPlayer;
        var nameColor = player.NameColor.ToArgb();
        var nameStyle = nameColor != 0 ? $"color: #{nameColor:X6}" : "";

        <div class="profile-header">
            <div class="profile-avatar">
                <img src="/avatar/player/@player.Id" 
                     alt="@player.Name's Avatar"
                     onerror="this.style.display='none'"/>
            </div>
            <div class="profile-info">
                <h1 class="profile-name" style="@nameStyle">@player.Name</h1>
                <div class="profile-details">
                    <div><strong>Level:</strong> @player.Level</div>
                    <div><strong>Class:</strong> @player.ClassName</div>
                    <div><strong>Experience:</strong> @player.Exp.ToString("N0")</div>
                    @if (!string.IsNullOrWhiteSpace(player.Guild?.Name))
                    {
                        <div><strong>Guild:</strong> @player.Guild.Name</div>
                    }
                    @if (player.LastOnline.HasValue)
                    {
                        <div><strong>Last Online:</strong> @player.LastOnline.Value.ToString("g")</div>
                    }
                </div>
            </div>
        </div>

        <div class="profile-sections">
            <div class="profile-section">
                <h2>Stats</h2>
                <div class="stats-grid">
                    @foreach (Stat statType in Enum.GetValues<Stat>())
                    {
                        var statIndex = (int)statType;
                        if (statIndex < player.Stat.Length)
                        {
                            var stat = player.Stat[statIndex];
                            var statName = statType.ToString();
                            <div class="stat-item">
                                <span class="stat-label">@statName:</span>
                                <span class="stat-value">@stat.Value()</span>
                            </div>
                        }
                    }
                </div>
            </div>

            <div class="profile-section">
                <h2>Equipment</h2>
                <div class="equipment-grid">
                    @for (var slotIndex = 0; slotIndex < Options.Instance.Equipment.Slots.Count; slotIndex++)
                    {
                        var slotName = Options.Instance.Equipment.Slots[slotIndex];
                        <div class="equipment-item">
                            <div class="equipment-slot">@slotName</div>
                            @if (player.TryGetEquippedItem(slotIndex, out var equippedItem))
                            {
                                <div class="equipment-name">@equippedItem.Descriptor.Name</div>
                            }
                            else
                            {
                                <div class="equipment-empty">Empty</div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</article>

