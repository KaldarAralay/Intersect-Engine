@page
@using Intersect.Server.Web.Pages.Shared.Players
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    
    var uptimeDays = TimeSpan.FromMilliseconds(Model.Uptime).Days;
    var uptimeHours = TimeSpan.FromMilliseconds(Model.Uptime).Hours;
    var uptimeMinutes = TimeSpan.FromMilliseconds(Model.Uptime).Minutes;
    var uptimeString = $"{uptimeDays}d {uptimeHours}h {uptimeMinutes}m";
}

@section Head {
    <style>
        .retro-homepage {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem;
            font-family: 'Courier New', monospace;
            background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
            border: 3px solid #8b4513;
            box-shadow: 
                0 0 20px rgba(139, 69, 19, 0.5),
                inset 0 0 20px rgba(0, 0, 0, 0.3);
            border-radius: 8px;
            color: #f4e4bc;
        }

        .retro-banner {
            text-align: center;
            padding: 2rem;
            margin-bottom: 2rem;
            background: linear-gradient(180deg, rgba(139, 69, 19, 0.3) 0%, rgba(0, 0, 0, 0.3) 100%);
            border: 2px solid #8b4513;
            border-radius: 8px;
            box-shadow: inset 0 0 30px rgba(0, 0, 0, 0.5);
}

        .retro-title {
            font-size: 3.5rem;
            font-weight: bold;
            text-shadow: 
                3px 3px 0px #000,
                0 0 10px rgba(255, 215, 0, 0.8),
                0 0 20px rgba(255, 215, 0, 0.5);
            color: #ffd700;
            margin: 0;
            letter-spacing: 3px;
            text-transform: uppercase;
            font-family: 'Courier New', monospace;
        }

        .retro-subtitle {
            font-size: 1.5rem;
            color: #d4af37;
            margin: 0.5rem 0 0 0;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
            font-style: italic;
        }

        .server-status-container {
            display: grid;
            grid-template-columns: 2fr 1fr;
            gap: 2rem;
            margin-bottom: 2rem;
        }

        @@media (max-width: 768px) {
            .server-status-container {
                grid-template-columns: 1fr;
            }
        }

        .status-box {
            background: rgba(0, 0, 0, 0.5);
            border: 2px solid #8b4513;
            border-radius: 8px;
            padding: 1.5rem;
            box-shadow: 
                inset 0 0 20px rgba(0, 0, 0, 0.5),
                0 0 15px rgba(139, 69, 19, 0.3);
        }

        .status-title {
            font-size: 1.8rem;
            color: #ffd700;
            margin: 0 0 1rem 0;
            text-align: center;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
            border-bottom: 2px solid #8b4513;
            padding-bottom: 0.5rem;
        }

        .status-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 1rem;
        }

        @@media (max-width: 600px) {
            .status-grid {
                grid-template-columns: 1fr;
            }
        }

        .status-item {
            display: flex;
            flex-direction: column;
            padding: 0.75rem;
            background: rgba(139, 69, 19, 0.2);
            border: 1px solid #8b4513;
            border-radius: 4px;
            transition: all 0.3s ease;
        }

        .status-item:hover {
            background: rgba(139, 69, 19, 0.4);
            box-shadow: 0 0 10px rgba(255, 215, 0, 0.3);
            transform: translateY(-2px);
        }

        .status-label {
            font-size: 0.9rem;
            color: #d4af37;
            margin-bottom: 0.25rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .status-value {
            font-size: 1.2rem;
            color: #f4e4bc;
            font-weight: bold;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.8);
        }

        .status-value.online {
            color: #00ff00;
            text-shadow: 
                0 0 5px rgba(0, 255, 0, 0.8),
                1px 1px 2px rgba(0, 0, 0, 0.8);
            animation: pulse 2s infinite;
        }

        @@keyframes pulse {
            0%, 100% {
                opacity: 1;
            }
            50% {
                opacity: 0.7;
            }
        }

        .quick-links {
            background: rgba(0, 0, 0, 0.5);
            border: 2px solid #8b4513;
            border-radius: 8px;
            padding: 1.5rem;
            box-shadow: 
                inset 0 0 20px rgba(0, 0, 0, 0.5),
                0 0 15px rgba(139, 69, 19, 0.3);
        }

        .links-title {
            font-size: 1.8rem;
            color: #ffd700;
            margin: 0 0 1rem 0;
            text-align: center;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
            border-bottom: 2px solid #8b4513;
            padding-bottom: 0.5rem;
        }

        .links-grid {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .retro-button {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.75rem;
            padding: 1rem;
            background: linear-gradient(180deg, rgba(139, 69, 19, 0.6) 0%, rgba(101, 50, 10, 0.8) 100%);
            border: 2px solid #8b4513;
            border-radius: 6px;
            color: #ffd700;
            text-decoration: none;
            font-size: 1.1rem;
            font-weight: bold;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
            box-shadow: 
                inset 0 0 10px rgba(0, 0, 0, 0.3),
                0 4px 8px rgba(0, 0, 0, 0.4);
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.8);
        }

        .retro-button:hover {
            background: linear-gradient(180deg, rgba(139, 69, 19, 0.8) 0%, rgba(101, 50, 10, 1) 100%);
            box-shadow: 
                inset 0 0 10px rgba(0, 0, 0, 0.3),
                0 0 15px rgba(255, 215, 0, 0.5),
                0 6px 12px rgba(0, 0, 0, 0.5);
            transform: translateY(-2px);
            color: #fff;
        }

        .retro-button:active {
            transform: translateY(0);
            box-shadow: 
                inset 0 0 15px rgba(0, 0, 0, 0.5),
                0 2px 4px rgba(0, 0, 0, 0.4);
        }

        .button-icon {
            font-size: 1.5rem;
        }

        .button-text {
            flex: 1;
            text-align: center;
        }

        .retro-footer-text {
            text-align: center;
            padding: 1.5rem;
            background: rgba(0, 0, 0, 0.3);
            border: 1px solid #8b4513;
            border-radius: 6px;
            margin-top: 2rem;
        }

        .retro-footer-text p {
            margin: 0.5rem 0;
            color: #d4af37;
            font-size: 1.1rem;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.8);
            font-style: italic;
        }
    </style>
}

<article class="retro-homepage">
    <div class="retro-banner">
            <h1 class="retro-title">@Options.Instance.GameName</h1>
            <p class="retro-subtitle">Welcome to the Realm</p>
        </div>

    <div class="server-status-container">
        <div class="status-box">
            <h2 class="status-title">Server Status</h2>
            <div class="status-grid">
                <div class="status-item">
                    <span class="status-label">Status:</span>
                    <span class="status-value online">‚óè ONLINE</span>
                </div>
                <div class="status-item">
                    <span class="status-label">Players Online:</span>
                    <span class="status-value">@Model.OnlinePlayers / @Model.TotalPlayers</span>
                </div>
                <div class="status-item">
                    <span class="status-label">Connected Clients:</span>
                    <span class="status-value">@(Model.ConnectedClients?.ToString() ?? "N/A")</span>
                </div>
                <div class="status-item">
                    <span class="status-label">Uptime:</span>
                    <span class="status-value">@uptimeString</span>
                </div>
                <div class="status-item">
                    <span class="status-label">Server Port:</span>
                    <span class="status-value">@Options.Instance.ServerPort</span>
                </div>
                <div class="status-item">
                    <span class="status-label">Cycles/Second:</span>
                    <span class="status-value">@Model.CyclesPerSecond</span>
                </div>
            </div>
        </div>

        <div class="quick-links">
            <h2 class="links-title">Quick Links</h2>
            <div class="links-grid">
                <a asp-page="/Leaderboard" class="retro-button">
                    <span class="button-icon">üèÜ</span>
                    <span class="button-text">Leaderboard</span>
                </a>
                <a asp-page="/Account/Login" class="retro-button">
                    <span class="button-icon">‚öîÔ∏è</span>
                    <span class="button-text">Login</span>
                </a>
            </div>
        </div>
</div>

    <div class="retro-footer-text">
        <p>Embark on an epic adventure in the world of @Options.Instance.GameName</p>
        <p>Join thousands of players in this retro MMORPG experience!</p>
    </div>
</article>